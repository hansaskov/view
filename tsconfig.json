{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "$config/*": [ "./src/config/*" ],
      "$db/*": [ "./src/db/*" ],
      "$collections/*": [ "./src/collections/*" ],
      "$types/*": [ "./src/types/*" ]
    }
  },
  "include": [
    "src"
  ],

}