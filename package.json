{
  "name": "view",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts ",
    "start": "NODE_ENV=production bun ./src/index.ts",
    "check": "bun x tsc --noEmit",
    "format": "bun x @biomejs/biome format src --write",
    "lint": "bun x @biomejs/biome check src --write",
    "verify": "bun lint && bun check",
    "generate": "bun x drizzle-kit generate",
    "migrate": "bun x drizzle-kit migrate",
    "studio": "bun x drizzle-kit studio"
  },
  "dependencies": {
    "better-auth": "^1.1.16",
    "drizzle-orm": "^0.39.2",
    "drizzle-typebox": "^0.3.0",
    "elysia": "^1.2.12",
    "react-router": "^7.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@libsql/client": "^0.14.0",
    "@types/bun": "^1.2.2",
    "@types/react-dom": "^19.0.3",
    "daisyui": "^5.0.0-beta.7",
    "drizzle-kit": "^0.30.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.7.3"
  },
  "overrides": {
    "@sinclair/typebox": "0.34.15"
  }
}